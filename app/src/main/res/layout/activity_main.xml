<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="z.p.MainActivity">

    <Switch
        android:id="@+id/notification_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="@string/action_to_privileges"
        android:textOff="@string/textOff"
        android:textOn="@string/textOn" />

    <Switch
        android:id="@+id/pay_service_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="@string/action_to_open"
        android:textOff="@string/textOff"
        android:textOn="@string/textOn" />

    <!--    <Switch-->
    <!--        android:id="@+id/mute_switch"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:padding="30dp"-->
    <!--        android:text="@string/action_to_mute"-->
    <!--        android:textOff="@string/textOff"-->
    <!--        android:textOn="@string/textOn" />-->

    <Button
        android:id="@+id/btn_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/action_to_log"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_device_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="请输入IMEI" />

    <Button
        android:id="@+id/btn_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="保存IMEI"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:lineSpacingExtra="4sp"
        android:text="@string/tips"
        android:textAlignment="viewStart" />


</LinearLayout>
